generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"  // because nestjs uses cjs
}

datasource db {
  provider = "postgresql"
}

model Product {
  id    String  @id @default(cuid()) // time-ordered key to reduce page fragmentation
  sku   String  @unique
  name  String
  description   String
  price   Int // stored in cents $10.00 = 1000
  isActive    Boolean   @default(true)
  images      String[]
  category    String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@map("products")

}